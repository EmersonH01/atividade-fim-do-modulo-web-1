package Operação;

import javax.persistence.EntityManager;
//import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import model.principal.alugue.AluguelDeCarros;


public class Negocios {

	public static void main(String[] args) {

		
		//Atribuindo valor nulo para que o proprio banco de dados coloque um id :
		AluguelDeCarros c1 = new AluguelDeCarros (1, "ferrari" ,  "vermelha" , "emerson@gmail.com" , 2500);
		AluguelDeCarros c2 = new AluguelDeCarros (2, "Bugate" , "preta", "Cleber@gmail.com" , 4000);
		AluguelDeCarros c3 = new AluguelDeCarros (3,"Audi"  , "azul" ,"Rian@gmail.com" , 5000);
		AluguelDeCarros c4 = new AluguelDeCarros (4, "Brasilia" , "amarela", "Marcio@gmail.com" , 1000 );
		AluguelDeCarros c5 = new AluguelDeCarros (5, "lamborguine", "verde" , "Marcio@gmail.com" , 1000 );

		
		
		//instancindo as configurações para o banco de dados 
		EntityManagerFactory enf = Persistence.createEntityManagerFactory("Aluguel");
		
		
		
		//conexão com o banco de dados 
		EntityManager em = enf.createEntityManager();
				
		
		
		//Aqui vai iniciar uma conexão com o banco de dados 
		em.getTransaction().begin();
		
		em.persist(c1);
		em.persist(c2);
		em.persist(c3);
		em.persist(c4);
		
		
		
		
		
		//Aqui eu confirmo as alterações que eu fiz no banco de dados 
		em.getTransaction().commit();
		em.close();
		enf.close();
		
		AluguelDeCarros c1 = em.find(AluguelDeCarros.class, c1);
		
		
		System.out.println("pronto");

		
		
	}

}
