package br.com.produtos.util;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

public class JPAutil {
  
	// metodo que vai criar o entity factory 
	private static final EntityManagerFactory FACTORY =	Persistence.createEntityManagerFactory("Aluguel");
	
	
	
	// este  metodo que devolve um entity manage para que seja usado em qualqquer lugar do projeto  
	public static EntityManager getEntityManeger() {
		return FACTORY.createEntityManager();
		
	}
	
}
